<Window x:Class="CP5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Form" Height="300" Width="350">
    <StackPanel Margin="20">
        <TextBlock Text="Email:"/>
        <TextBox Name="emailTextBox"
                 Text="{Binding Email, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Foreground="Red" FontSize="12">
            <TextBlock.Text>
                <Binding Path="(Validation.Errors)[0].ErrorContent" RelativeSource="{RelativeSource PreviousData}" />
            </TextBlock.Text>
        </TextBlock>

        <TextBlock Text="Password:" Margin="0,10,0,0"/>
        <TextBox Name="passwordTextBox"
                 Text="{Binding Password, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Foreground="Red" FontSize="12">
            <TextBlock.Text>
                <Binding Path="(Validation.Errors)[0].ErrorContent" RelativeSource="{RelativeSource PreviousData}" />
            </TextBlock.Text>
        </TextBlock>

        <TextBlock Text="Age:" Margin="0,10,0,0"/>
        <TextBox Name="ageTextBox"
                 Text="{Binding Age, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Foreground="Red" FontSize="12">
            <TextBlock.Text>
                <Binding Path="(Validation.Errors)[0].ErrorContent" RelativeSource="{RelativeSource PreviousData}" />
            </TextBlock.Text>
        </TextBlock>

        <Button Content="Submit" Click="Submit_Click" Margin="0,20,0,0" Width="100" HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
